{
  "cli": "nx",
  "id": "custom-element",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Custom element name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the custom element.",
      "visible": false
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    }
  },
  "required": ["name"]
}
